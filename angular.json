{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "analytics": "0808d75c-4f77-4629-97b1-49019dbf7b34"
  },
  "newProjectRoot": "projects",
  "projects": {
    "larios-income-tax": {
      "projectType": "application",
      "schematics": {},
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "i18n": {
        "sourceLocale": {
          "code": "en-US",
          "baseHref": "/"
        },
        "locales": {
          "es-MX": {
            "translation": "src/locale/messages.es-MX.xlf",
            "baseHref": "/es/"
          }
        }
      },
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": ["src/material-theme.scss", "src/styles.css"],
            "outputPath": "dist/larios-income-tax",
            "polyfills": ["@angular/localize/init"]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all",
              "localize": true
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "localize": false
            },
            "en-US": {
              "localize": ["en-US"]
            },
            "es-MX": {
              "localize": ["es-MX"]
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "larios-income-tax:build:production"
            },
            "development": {
              "buildTarget": "larios-income-tax:build:development"
            },
            "en-US": {
              "buildTarget": "larios-income-tax:build:en-US"
            },
            "es-MX": {
              "buildTarget": "larios-income-tax:build:es-MX"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      }
    }
  }
}
